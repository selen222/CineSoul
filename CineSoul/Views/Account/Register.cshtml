@model CineSoul.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Yeni Hesap Oluştur";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header bg-dark text-white text-center">
                <h3 class="font-weight-light my-4">Yeni Hesap Oluştur</h3>
            </div>
            <div class="card-body">

                <form asp-controller="Account" asp-action="Register" method="post">

                    @* Genel Doğrulama Hataları *@
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    @* E-Posta Alanı *@
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" autocomplete="email" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    @* Görünen Ad Alanı *@
                    <div class="form-floating mb-3">
                        <input asp-for="DisplayName" class="form-control" placeholder="Kullanıcı Adınız" />
                        <label asp-for="DisplayName"></label>
                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                    </div>

                    @* Şifre Alanı *@
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Şifre" autocomplete="new-password" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    @* Şifre Tekrarı Alanı *@
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrarı" autocomplete="new-password" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    @* Kayıt Ol Butonu *@
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg mt-3">Kayıt Ol</button>
                    </div>
                </form>

            </div>
            <div class="card-footer text-center py-3">
                <div class="small">
                    Hesabınız var mı? <a asp-controller="Account" asp-action="Login">Giriş Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        // İstemci tarafı (client-side) doğrulama için gereklidir.
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}