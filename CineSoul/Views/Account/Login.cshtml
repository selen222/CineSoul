@model CineSoul.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header bg-dark text-white text-center">
                <h3 class="font-weight-light my-4">Giriş Yap</h3>
            </div>
            <div class="card-body">

                <form asp-controller="Account" asp-action="Login" method="post">

                    @* Gizli ReturnUrl alanı *@
                    <input type="hidden" asp-for="ReturnUrl" />

                    @* Genel Doğrulama Hataları *@
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    @* E-Posta Alanı *@
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" autocomplete="email" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    @* Şifre Alanı *@
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Şifre" autocomplete="current-password" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    @* Beni Hatırla Checkbox'ı *@
                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    @* Giriş Yap Butonu *@
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg mt-3">Giriş Yap</button>
                    </div>
                </form>

            </div>
            <div class="card-footer text-center py-3">
                <div class="small">
                    Hesabınız yok mu? <a asp-controller="Account" asp-action="Register">Hemen Kayıt Ol</a>
                </div>
                @* <div class="small mt-2">
                    <a href="#">Şifremi Unuttum</a>
                </div> *@
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        // İstemci tarafı (client-side) doğrulama için gereklidir.
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}