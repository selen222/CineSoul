@model CineSoul.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card bg-dark border-secondary shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-dark border-secondary text-white text-center py-4">
                    <h3 class="fw-bold text-danger mb-0">CineSoul Giriş</h3>
                </div>
                <div class="card-body p-4 p-lg-5">
                    <form asp-controller="Account" asp-action="Login" method="post" id="loginForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        @* E-Posta *@
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label text-white-50 small">E-posta Adresi</label>
                            <input asp-for="Email"
                                   id="Email"
                                   name="Email"
                                   class="form-control bg-secondary text-white border-0 py-2 shadow-none"
                                   placeholder="adiniz@example.com"
                                   autocomplete="username"
                                   autofocus
                                   required />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        @* Şifre *@
                        <div class="mb-4">
                            <label asp-for="Password" class="form-label text-white-50 small">Şifre</label>
                            <input asp-for="Password"
                                   id="Password"
                                   name="Password"
                                   type="password"
                                   class="form-control bg-secondary text-white border-0 py-2 shadow-none"
                                   placeholder="••••••••"
                                   autocomplete="current-password"
                                   required />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        @* Beni Hatırla *@
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" id="RememberMe" name="RememberMe" class="form-check-input bg-dark border-secondary" />
                                <label asp-for="RememberMe" class="form-check-label text-white-50 small">Beni Hatırla</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-danger btn-lg w-100 rounded-pill fw-bold shadow">
                            Giriş Yap
                        </button>
                    </form>
                </div>
                <div class="card-footer bg-dark border-secondary text-center py-3">
                    <div class="text-white-50 small">
                        Hesabınız yok mu? <a asp-controller="Account" asp-action="Register" class="text-danger text-decoration-none fw-bold">Hemen Kayıt Ol</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}