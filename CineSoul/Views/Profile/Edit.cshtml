@model CineSoul.ViewModels.EditProfileViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white border-secondary shadow-lg">
                <div class="card-header border-secondary text-center">
                    <h4 class="mb-0">Profili Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Profile" asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken() @* Token burası için önemli *@

                        <div class="text-center mb-4">
                            <img src="@(Model.ExistingPicturePath ?? "/images/default_avatar.png")"
                                 id="profileImagePreview"
                                 class="rounded-circle img-thumbnail bg-secondary border-danger"
                                 style="width: 150px; height: 150px; object-fit: cover;">

                            <div class="mt-3">
                                <button type="button" id="btnDeletePhoto" class="btn btn-sm btn-outline-danger rounded-pill">
                                    <i class="fas fa-trash-alt me-1"></i> Fotoğrafı Kaldır
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DisplayName" class="form-label">Görünen Ad</label>
                            <input asp-for="DisplayName" class="form-control bg-dark text-white border-secondary">
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Profil Fotoğrafı Güncelle</label>
                            <input asp-for="ProfilePictureFile" type="file" class="form-control bg-dark text-white border-secondary">
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Değişiklikleri Kaydet</button>
                            <a asp-action="Index" class="btn btn-outline-light">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('btnDeletePhoto').addEventListener('click', function () {
            if (confirm('Profil fotoğrafınızı kaldırmak istediğinize emin misiniz?')) {

                fetch('/Profile/RemoveProfilePicture', {
                    method: 'DELETE',
                    // Header kısmını Controller'da IgnoreAntiforgeryToken kullandığımız için basitleştirebiliriz
                })
                .then(response => {
                    if (response.ok) {
                        alert('Profil fotoğrafı varsayılana döndürüldü.');
                        location.reload();
                    } else {
                        alert('Silme işlemi başarısız oldu.');
                    }
                })
                .catch(error => {
                    console.error('Hata:', error);
                    alert('Bir bağlantı hatası oluştu.');
                });
            }
        });
    </script>
}