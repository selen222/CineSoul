@model CineSoul.Models.UserList
@using CineSoul.Models

@{
    ViewData["Title"] = "Listem";
    
    var movies = ViewBag.Movies as List<Movie>;
}

<div class="container mt-5 pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-warning fw-bold mb-0">@Model.Name</h2>
            <p class="text-white-50">@Model.Description</p>
        </div>
        <span class="badge bg-danger rounded-pill px-3 py-2">@(movies?.Count ?? 0) Film</span>
    </div>

    <hr class="border-secondary opacity-25 mb-5" />

    @if (movies != null && movies.Any())
    {
        <div class="row g-4">
            @foreach (var movie in movies)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card bg-dark text-white border-secondary h-100 shadow-sm movie-card">
                        <div class="position-relative">
                            <img src="https://image.tmdb.org/t/p/w500@(movie.PosterPath)" class="card-img-top rounded-top" alt="@movie.Title" />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title text-truncate mb-1">@movie.Title</h6>
                            <p class="card-text small text-muted mb-3">@movie.Year</p>

                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-info rounded-pill px-3">Detay</a>

                                <form asp-controller="UserList" asp-action="RemoveFromList" method="post" onsubmit="return confirm('Bu filmi listeden çıkarmak istediğinize emin misiniz?')">
                                    <input type="hidden" name="movieId" value="@movie.Id" />
                                    <button type="submit" class="btn btn-sm btn-link text-danger p-0 border-0">
                                        <i class="fas fa-trash-alt"></i> Çıkar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 bg-dark border border-secondary rounded-4 shadow-sm">
            <i class="fas fa-film fa-4x text-secondary mb-3 opacity-25"></i>
            <h4 class="text-white">Listeniz Henüz Boş</h4>
            <p class="text-muted">Favori filmlerinizi ekleyerek koleksiyonunuzu oluşturun.</p>
            <a asp-controller="Movies" asp-action="Index" class="btn btn-danger rounded-pill px-4 mt-2">Filmleri Keşfet</a>
        </div>
    }
</div>

<style>
    .movie-card {
        transition: transform 0.2s;
    }

        .movie-card:hover {
            transform: translateY(-5px);
            border-color: #e50914 !important;
        }
</style>