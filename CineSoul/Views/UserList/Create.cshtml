@model CineSoul.Models.UserList

@{
    ViewData["Title"] = "Yeni Film Listesi Oluştur";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card bg-dark text-white shadow-lg border border-secondary rounded-4">
                <div class="card-header bg-transparent border-secondary text-center py-4">
                    <h3 class="fw-bold mb-0 text-danger">
                        <i class="fas fa-plus-circle me-2"></i>Yeni Liste
                    </h3>
                    <p class="text-muted small mb-0 mt-2">Kendi film koleksiyonunu oluşturmaya başla.</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label text-light fw-bold small">LİSTE ADI</label>
                            <input asp-for="Name" class="form-control bg-secondary bg-opacity-10 border-secondary text-white py-2"
                                   placeholder="Örn: Favori Bilim Kurgu Filmlerim" required />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label text-light fw-bold small">AÇIKLAMA (OPSİYONEL)</label>
                            <textarea asp-for="Description" class="form-control bg-secondary bg-opacity-10 border-secondary text-white"
                                      rows="3" placeholder="Bu liste ne hakkında?"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        
                        <input type="hidden" name="MovieIds" value="" />

                        <div class="d-grid gap-3 mt-5">
                            <button type="submit" class="btn btn-danger btn-lg fw-bold rounded-3 shadow">
                                <i class="fas fa-save me-2"></i>Listeyi Kaydet
                            </button>
                            <a asp-controller="Profile" asp-action="Index" class="btn btn-outline-secondary btn-sm border-0 text-muted">
                                Vazgeç ve Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus {
        background-color: rgba(255, 255, 255, 0.05);
        border-color: #e50914;
        box-shadow: 0 0 0 0.25rem rgba(229, 9, 20, 0.25);
        color: white;
    }

    .form-control::placeholder {
        color: #6c757d;
        font-size: 0.9rem;
    }
</style>