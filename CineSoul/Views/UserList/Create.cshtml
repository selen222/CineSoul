@model CineSoul.Models.UserList

@{
    ViewData["Title"] = "Yeni Film Listesi Oluştur";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-7">
        <div class="card bg-secondary text-white shadow-lg border-0 rounded-lg">
            <div class="card-header bg-dark text-white text-center">
                <h3 class="font-weight-light my-4"><i class="fas fa-plus-square me-2"></i> Yeni Liste Oluştur</h3>
            </div>
            <div class="card-body">

                <form asp-action="Create" method="post">

                    @* Genel Doğrulama Hataları *@
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    @* Liste Adı Alanı *@
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Örn: 2024 En İyileri" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    @* Açıklama Alanı *@
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Bu liste hakkında kısa bir açıklama..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    @* Butonlar *@
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-save me-1"></i> Listeyi Kaydet</button>
                        <a asp-action="Index" class="btn btn-outline-light mt-2">Listelerime Geri Dön</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        // İstemci tarafı (client-side) doğrulama için
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}