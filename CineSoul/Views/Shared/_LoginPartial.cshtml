@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        var user = await UserManager.GetUserAsync(User);

        <li class="nav-item me-2">
            <a class="nav-link btn btn-outline-light text-white rounded-pill px-3" asp-area="" asp-controller="Profile" asp-action="Index" title="Manage">
                <i class="fas fa-user-circle me-1"></i> @user.DisplayName
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-danger text-white rounded-pill px-3">
                    <i class="fas fa-sign-out-alt me-1"></i> Çıkış Yap
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item me-2">
            <a class="nav-link btn btn-outline-light text-white rounded-pill px-3" asp-area="" asp-controller="Account" asp-action="Register">
                Kayıt Ol
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-danger text-white rounded-pill px-3" asp-area="" asp-controller="Account" asp-action="Login">
                <i class="fas fa-sign-in-alt me-1"></i> Giriş Yap
            </a>
        </li>
    }
</ul>